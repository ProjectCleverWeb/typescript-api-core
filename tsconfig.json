{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": ".build",
		"pretty": true,
		"rootDir": "./",
		"sourceMap": true,
		"target": "ES6",
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true,
		"noErrorTruncation": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"preserveConstEnums": false,
		"strict": true,
		"allowJs": true,
		"strictNullChecks": true
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*"
	],
	"typedocOptions": {
		"name": "TypeScript API Core",
		"theme": "./node_modules/typedoc-vortex-theme/bin/default",
		"mode": "file",
		"out": "docs"
	}
}
